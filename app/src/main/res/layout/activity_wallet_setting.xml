<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".modules.walletsetting.WalletSetting">

    <include layout="@layout/title_project" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/set_wallet_rl"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:gravity="center"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_wallet_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/seek_wallet_icon" />


        <com.easyetz.view.MText
            android:id="@+id/set_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="@color/zt_hui"
            android:textSize="12sp"
            app:customTFont="CircularPro-Book.otf" />

        <com.easyetz.view.MText
            android:id="@+id/set_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="@color/zt_black"
            android:textSize="16sp"
            app:customTFont="CircularPro-Bold.otf" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F8FA" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp">


        <com.easyetz.view.MText
            android:id="@+id/wallet_nick_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <com.easyetz.view.MEdit
            android:id="@+id/wallet_nick_et"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/mnemonic_backup_bg"
            android:hint="@string/create_wallet_name"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            android:visibility="gone"
            app:customTFont="CircularPro-Bold.otf" />

        <TextView
            android:id="@+id/set_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:text="@string/Wallet.set.updata"
            android:textColor="@color/zt_hui"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_password"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <com.easyetz.view.MText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/Wallet.set.pwd"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <com.easyetz.view.MText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/Wallet.set.mnemonic"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/set_privatekey"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <com.easyetz.view.MText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/Wallet.set.privaekey"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_keystore"
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <com.easyetz.view.MText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/Wallet.set.keystore"
            android:textColor="@color/zt_black"
            android:textSize="14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.easyetz.view.MText
        android:id="@+id/button_del_wallet"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_lu_huang"
        android:gravity="center"
        android:text="@string/del.wallet"
        android:textColor="@color/zt_lu"
        android:textSize="15sp"
        app:customTFont="CircularPro-Bold.otf" />

</LinearLayout>